
@{
    ViewBag.Title = "PostBoard";
}

<h2>게시글 등록</h2>

<br/> <br/>

      <form action="/Board/Post" method="post">
          <table class="table">
              <thead>
                  <tr>
                      <th>제목</th>
                      <th><input name="title"/></th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                      <td>작성자</td>
                      <td><input value="박지현" name="writer" disabled/></td>
                      <td>작성일</td>
                      <td><input value=@DateTime.Now name="createdDate"/></td>
                  </tr>
              </tbody>
          </table>

          <br />

          <div>
              <textarea style="resize: none; width:1000px" placeholder="내용을 입력하세요." rows="20" cols="20" name="content"></textarea>
          </div>
          <div style="text-align:right">
              <button class="btn btn-primary" type="submit">등록</button>
              <a class="btn btn-secondary" href="/Board/Board">목록</a>
          </div>
      </form>


